@model Colectare_pubela.Models.Colectari

@{
    ViewData["Title"] = "Register Collection";
}
<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12 bg-light shadow rounded p-5" style="min-height: 70vh;">
            <h2 class="text-center mb-4">Register Dumpster Collection</h2>
            <form asp-action="InregistreazaColectare" method="post" class="container p-4">
                <div class="mb-4">
                    <label asp-for="TagId"></label>
                    <select asp-for="TagId" class="form-control" asp-items="ViewBag.Pubele">
                        <option value="">-- Select Dumpster --</option>
                    </select>
                    <span asp-validation-for="TagId" class="text-danger"></span>
                </div>
            
                <div class="mb-4">
                    <label asp-for="CollectionTime"></label>
                    <input asp-for="CollectionTime" class="form-control" type="datetime-local" placeholder="-- Select Date --" />
                    <span asp-validation-for="CollectionTime" class="text-danger"></span>
                </div>
            
                <div class="mb-4">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter the collection address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-primary">Register Collection</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}